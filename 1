public class Number {

	public static void main(String[] args){
		
		isEven(10);
		isOdd(11);
		
	}
	public static void isEven (int a){
		if (a%2 == 0){
		System.out.println("The number "+ a +" is even");}
		
		
	}
	public static void isOdd (int a){
		if (a%2!=0){
		System.out.println("The number "+ a + " is odd");}
		
	}
}
